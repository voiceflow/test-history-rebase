{
  "extends": "@voiceflow/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "noErrorTruncation": true
  },
  "exclude": ["node_modules/**/*", "build/**/*", "test/**/*.d.ts"]
}
