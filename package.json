{
  "name": "root",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/deep-equal-in-any-order": "1.0.1",
    "@types/mock-require": "2.0.1",
    "@types/sinon": "10.0.11",
    "@types/sinon-chai": "3.2.8",
    "@vitest/coverage-c8": "^0.26.3",
    "@voiceflow/babel-preset": "1.1.1",
    "@voiceflow/commitlint-config": "2.0.1",
    "@voiceflow/dependency-cruiser-config": "1.3.0",
    "@voiceflow/eslint-config": "7.0.0",
    "@voiceflow/git-branch-check": "1.4.0",
    "@voiceflow/prettier-config": "1.2.1",
    "@voiceflow/semantic-release-config": "1.1.0",
    "@voiceflow/stylelint-config": "1.1.0",
    "@voiceflow/tsconfig": "1.4.8",
    "@voiceflow/vite-config": "1.9.1",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "commitizen": "4.2.4",
    "concurrently": "7.6.0",
    "cz-conventional-changelog": "3.3.0",
    "deep-equal-in-any-order": "1.1.19",
    "depcheck": "1.4.3",
    "dependency-cruiser": "12.3.0",
    "eslint": "8.31.0",
    "eslint-import-resolver-lerna": "2.0.0",
    "fixpack": "4.0.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "mocha": "9.2.2",
    "mocha-suite": "1.0.11",
    "mock-require": "3.0.3",
    "node-dev": "7.0.0",
    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "prettier": "2.8.1",
    "prettier-stylelint": "0.4.2",
    "rimraf": "3.0.2",
    "sinon": "11.1.2",
    "sinon-chai": "3.7.0",
    "stylelint": "14.16.1",
    "ts-loader": "9.4.2",
    "ts-mocha": "10.0.0",
    "tsc-alias": "^1.8.2",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vite-node": "^0.26.3",
    "vitest": "0.26.3"
  },
  "prettier": "@voiceflow/prettier-config",
  "private": true,
  "scripts": {
    "analyze:dependencies": "lerna run analyze:dependencies --parallel",
    "bootstrap": "lerna bootstrap --no-ci",
    "build": "lerna run build --stream",
    "build:creator-app": "yarn --cwd packages/creator-app build",
    "build:deps": "yarn build --scope @voiceflow/ui --scope @voiceflow/platform-config --scope @voiceflow/socket-utils --scope @voiceflow/realtime-sdk --scope @voiceflow/ml-sdk",
    "build:ml-gateway": "yarn --cwd packages/ml-gateway build",
    "build:ml-sdk": "yarn --cwd packages/ml-sdk build",
    "build:platform-config": "yarn --cwd packages/platform-config build",
    "build:realtime": "yarn --cwd packages/realtime build",
    "build:realtime-sdk": "yarn --cwd packages/realtime-sdk build",
    "build:services": "yarn build --scope @voiceflow/realtime --scope @voiceflow/ml-gateway",
    "build:showcase": "yarn --cwd packages/showcase build",
    "build:socket-utils": "yarn --cwd packages/socket-utils build",
    "build:ui": "yarn --cwd packages/ui build",
    "clean": "yarn clean:artifacts && yarn clean:root",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:root": "rimraf node_modules",
    "commit": "cz",
    "connect:cli": "yarn --cwd packages/creator-app connect:cli",
    "cypress": "yarn --cwd packages/creator-app cypress",
    "cypress:ci": "yarn --cwd packages/creator-app cypress:ci",
    "cypress:install": "yarn --cwd packages/creator-app cypress:install",
    "dev": "lerna run dev --parallel",
    "e2e": "yarn --cwd packages/creator-app e2e",
    "e2e:check-deps": "yarn --cwd packages/creator-app e2e:check-deps",
    "e2e:check-deps-ci": "yarn --cwd packages/creator-app e2e:check-deps-ci",
    "gen-certs:e2e": "yarn --cwd packages/creator-app gen-certs:e2e && yarn --cwd packages/realtime gen-certs:e2e",
    "kill:e2e": "yarn --cwd packages/creator-app kill:e2e",
    "lint": "lerna run lint --parallel",
    "lint:commit": "yarn commit",
    "lint:dockerfiles": "lerna run lint:dockerfiles --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "lint:quiet": "lerna run lint:quiet --parallel",
    "lint:report": "lerna run lint:report --parallel",
    "local": "yarn --cwd packages/creator-app local",
    "local:creator-app": "yarn  --cwd packages/creator-app local",
    "local:e2e": "concurrently -c yellow,blue 'yarn --cwd packages/creator-app local:e2e' 'yarn --cwd packages/realtime local:e2e'",
    "local:ml-gateway": "yarn  --cwd packages/ml-gateway local",
    "local:realtime": "yarn --cwd packages/realtime local",
    "local:showcase": "yarn --cwd packages/showcase local",
    "mesh:post:creator-app": "yarn --cwd packages/creator-app mesh:post",
    "mesh:post:ml-gateway": "yarn --cwd packages/ml-gateway mesh:post",
    "mesh:post:realtime": "yarn --cwd packages/realtime mesh:post",
    "mesh:post:showcase": "yarn --cwd packages/showcase mesh:post",
    "mesh:pre:creator-app": "yarn --cwd packages/creator-app mesh:pre",
    "mesh:pre:ml-gateway": "yarn --cwd packages/ml-gateway mesh:pre",
    "mesh:pre:realtime": "yarn --cwd packages/realtime mesh:pre",
    "mesh:pre:showcase": "yarn --cwd packages/showcase mesh:pre",
    "postinstall": "yarn bootstrap",
    "prepare": "husky install",
    "start": "yarn --cwd packages/creator-app start",
    "start:e2e": "yarn --cwd packages/creator-app start:e2e",
    "start:hidden": "yarn --cwd packages/creator-app start:hidden",
    "start:meshed": "yarn --cwd packages/creator-app start:meshed",
    "start:meshed:creator-app": "yarn --cwd packages/creator-app start:meshed",
    "start:meshed:ml-gateway": "yarn --cwd packages/ml-gateway start:meshed",
    "start:meshed:realtime": "yarn --cwd packages/realtime start:meshed",
    "start:meshed:showcase": "yarn --cwd packages/showcase start:meshed",
    "start:proxy": "yarn --cwd packages/creator-app start:proxy",
    "test": "lerna run test",
    "test:dependencies": "lerna run test:dependencies --parallel",
    "test:integration": "lerna run test:integration",
    "test:run": "lerna run test:run",
    "test:unit": "lerna run test:unit",
    "types": "lerna run types  --stream"
  },
  "workspaces": [
    "packages/*"
  ]
}
