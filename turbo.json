{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["build/**", "openapi.next.json"],
      "inputs": [
        "src/**",
        "config/**",
        "public/**",
        "scripts/**",
        "typings/**",
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "svgr.config.js",
        "tsconfig.*.json",
        "!src/**/*.test.ts"
      ],
      "dependsOn": ["^build", "codegen"]
    },
    "codegen": {
      "outputs": ["build/**", "src/generated/**"],
      "inputs": [
        "src/**",
        "!src/**/*.test.ts",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.build.*.json",
        "scripts/**",
        "config/**"
      ],
      "dependsOn": ["^build"]
    },
    "codegen:release": {
      "cache": false
    },
    "gen-certs:e2e": {
      "cache": false
    },
    "rdme:publish": {
      "cache": false
    },
    "schema:generate": {
      "outputs": ["openapi.next.json", ".env.local"],
      "inputs": [
        "src/**",
        ":!src/**/*.test.ts",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.build.*.json"
      ]
    },
    "schema:validate": {
      "outputs": ["openapi.json"],
      "inputs": ["src/**", ":!src/**/*.test.ts", "package.json", "openapi.json", "openapi.next.json"],
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:acceptance": {
      "inputs": ["src/**", "package.json", ".env.e2e"],
      "dependsOn": ["build"]
    },
    "test:dependencies": {
      "inputs": ["src/**", "package.json", ".dependency-cruiser.mjs", ".dependency-cruiser-known-violations.json"]
    },
    "test:unit": {
      "outputs": ["sonar/coverage/**/*"],
      "inputs": ["src/**", "package.json", "jest.config.js"]
    },
    "test:integration": {
      "inputs": ["src/**", "package.json", ".env.e2e"],
      "outputs": []
    },
    "test:types": {
      "outputs": [],
      "inputs": ["src/**/*.test-d.ts", "package.json"]
    },
    "test:check": {
      "inputs": ["src/**", "package.json"]
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "meta/jest-config/*.js",
    "meta/prettier-config/*.js",
    "meta/swc-config/*.json",
    "meta/typescript-config/*.json"
  ]
}
